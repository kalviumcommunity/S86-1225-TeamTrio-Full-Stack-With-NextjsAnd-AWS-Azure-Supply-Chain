# ==========================================
# Cloud Database Configuration
# ==========================================

# PostgreSQL Connection String
# AWS RDS Example: postgresql://username:password@instance-name.region.rds.amazonaws.com:5432/database_name
# Azure PostgreSQL Example: postgresql://username@servername:password@servername.postgres.database.azure.com:5432/database_name
# Local Development: postgresql://postgres:password@localhost:5432/foodontracks
DATABASE_URL="postgresql://user:password@hostname:5432/databasename"

# ==========================================
# AWS RDS Configuration (if using AWS)
# ==========================================
AWS_RDS_ENDPOINT="instance-name.region.rds.amazonaws.com"
AWS_RDS_PORT="5432"
AWS_RDS_INSTANCE_NAME="foodontracks-db"
AWS_RDS_DATABASE_NAME="foodontracks"
AWS_RDS_MASTER_USERNAME="admin"
# AWS_RDS_MASTER_PASSWORD=<your-secure-password>

# ==========================================
# Azure PostgreSQL Configuration (if using Azure)
# ==========================================
AZURE_POSTGRES_SERVER="servername.postgres.database.azure.com"
AZURE_POSTGRES_PORT="5432"
AZURE_POSTGRES_DATABASE="foodontracks"
AZURE_POSTGRES_USERNAME="adminuser"
# AZURE_POSTGRES_PASSWORD=<your-secure-password>
AZURE_RESOURCE_GROUP="foodontracks-rg"
AZURE_LOCATION="eastus"

# ==========================================
# Connection Pool Configuration
# ==========================================
DB_POOL_MAX="20"
DB_POOL_IDLE_TIMEOUT="30000"
DB_POOL_CONNECTION_TIMEOUT="5000"

# ==========================================
# SSL/TLS Configuration
# ==========================================
DB_SSL_ENABLED="true"
DB_SSL_REJECT_UNAUTHORIZED="false"  # Set to true in production after verifying certificate

# ==========================================
# Backup Configuration
# ==========================================
DB_BACKUP_RETENTION_DAYS="7"
DB_BACKUP_SCHEDULE="daily"  # or weekly/custom

# ==========================================
# Monitoring Configuration
# ==========================================
DB_ENABLE_SLOW_QUERY_LOG="true"
DB_SLOW_QUERY_THRESHOLD_MS="1000"
CLOUDWATCH_NAMESPACE="FoodONtracks/Database"
AZURE_MONITOR_WORKSPACE="foodontracks-workspace"

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV="production"
NEXT_PUBLIC_API_URL="https://yourdomain.com"
JWT_SECRET="your-secret-key"
JWT_EXPIRY="7d"

# ==========================================
# Email Configuration
# ==========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FORMAT="json"
